{
  "extends": "@repo/shared/src/configs/tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@admin/components/*": ["./src/components/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "**/*.ts",
    "**/*.tsx",
    "../../packages/shared/src/**/*",
    "../../packages/shared/src/components/InputField.tsx"
  ],
  "exclude": ["node_modules"]
}
